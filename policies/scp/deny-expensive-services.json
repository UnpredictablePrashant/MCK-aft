{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyExpensiveServices",
      "Effect": "Deny",
      "Action": [
        "sagemaker:*",
        "redshift:*",
        "emr:*",
        "elasticache:CreateCacheCluster",
        "elasticache:CreateReplicationGroup",
        "rds:CreateDBCluster",
        "rds:CreateDBInstance",
        "ec2:RunInstances"
      ],
      "Resource": "*",
      "Condition": {
        "StringNotEquals": {
          "ec2:InstanceType": [
            "t2.micro",
            "t2.small",
            "t3.micro",
            "t3.small",
            "t3a.micro",
            "t3a.small"
          ]
        }
      }
    },
    {
      "Sid": "DenyLargeEBSVolumes",
      "Effect": "Deny",
      "Action": [
        "ec2:CreateVolume",
        "ec2:ModifyVolume"
      ],
      "Resource": "*",
      "Condition": {
        "NumericGreaterThan": {
          "ec2:VolumeSize": "100"
        }
      }
    },
    {
      "Sid": "DenyExpensiveInstanceTypes",
      "Effect": "Deny",
      "Action": "ec2:RunInstances",
      "Resource": "arn:aws:ec2:*:*:instance/*",
      "Condition": {
        "ForAnyValue:StringNotLike": {
          "ec2:InstanceType": [
            "t2.*",
            "t3.*",
            "t3a.*"
          ]
        }
      }
    }
  ]
}



